{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RuleWeaver",
  "version": "0.1.0",
  "identifier": "com.ruleweaver.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RuleWeaver",
        "width": 1200,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "RuleWeaver - AI Coding Assistant Rule Manager",
    "longDescription": "A unified desktop application for managing rules, commands, and skills for AI coding assistants like Gemini CLI, OpenCode, Cline, and Claude Code.",
    "category": "DeveloperTool"
  }
}
